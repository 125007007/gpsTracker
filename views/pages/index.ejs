
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Realtime location tracker</title>

    <!-- leaflet css  -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css" />

    <style>
        body {
            margin: 0;
            padding: 0;
        }

        #map {
            width: 100%;
            height: 100vh;
        }
    </style>
</head>

<body>
    <div id="map"></div>
</body>
</html>

<!-- leaflet js  -->
<script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"></script>


<!-- New Code -->
<script>
       

    var map = L.map('map')

            
    L.tileLayer('http://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        attribution: '&copy; <a href="http://openstreetmap.org">OpenStreetMap</a> contributors',
        maxZoom: 18
    }).addTo(map);
    map.attributionControl.setPrefix(''); // Don't show the 'Powered by Leaflet' text.

    
    var lon = "<%= lastLocation.lon %>";
    var lat = "<%= lastLocation.lat %>";
    //var popupText = item.datetime;

    var markerLocation = new L.LatLng(lat, lon);

    var marker = new L.Marker(markerLocation);
    var latLngs = [ marker.getLatLng() ];
    var bounds = new L.LatLngBounds(latLngs);
    map.fitBounds(bounds);

    map.addLayer(marker);
    var label = String('Datetime: ' + "<%= lastLocation.datetime %>" + 
                        '<br> Battery: ' + "<%= lastLocation.batt %>" + 
                        '<br> Accuracy: ' + Math.round("<%= lastLocation.acc %>" * 100) / 100 +
                        '<br> Speed: ' + "<%= lastLocation.spd %>" +
                        '<br> Heading: ' + "<%= lastLocation.dir %>")

    marker.bindTooltip(label, {noHide: true});
    marker.addTo(map)
    marker.openTooltip();

    //setTimeout(function() { getLocal(); }, 3000);

</script>

<script>

    setTimeout("location.reload(true);", 5000);
    
</script>

